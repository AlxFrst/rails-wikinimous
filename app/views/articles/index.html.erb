<h2 class="p-3">Articles</h2>
<% @articles.each do |article| %>
<div class="container p-3">
  <div class="card">
    <div class="card-body">
      <h5 class="card-title"><%= link_to article.title, article_path(article.id) %></h5>
      <p class="card-text"><%= article.content %></p>
    </div>
  </div>
</div>
<% end %>
